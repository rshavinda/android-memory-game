<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="sliit.mad.g3.mtit_mad.PlayOrExit">


    <pl.droidsonroids.gif.GifImageView

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/final_screen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/btn_Exit"
        android:layout_width="200dp"
        android:layout_height="87dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/exit_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="200dp"
        android:layout_height="87dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/play_btn"
        android:layout_above="@+id/btn_Exit"
        android:layout_alignLeft="@+id/btn_Exit"
        android:layout_alignStart="@+id/btn_Exit" />

</RelativeLayout>
